@model Infrastructure.Models.LinkModel

@{
    ViewBag.Title = "title";
    Layout = "_LayoutEmpty";
    var id = $"{Model.Id}_link";
}

<div class="d-flex flex-column @id">
    
    <div class="card-links-a v-48" style="border-color: @Model.Style.LinkBorderColor; position: relative; overflow: visible;">
        <button onclick="deleteLink(this)" class="btn deletelink" type="button" id="@Model.Id" style="position: absolute; 
            top: -2vh;
    right: -3vh; ">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="red" class="bi bi-x-circle-fill" viewBox="0 0 16 16">
                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0M5.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8.707 8l2.647-2.646a.5.5 0 0 0-.708-.708L8 7.293z"/>
            </svg>
        </button>
        <a class="btn w-100" href="@Model.Url" style="color: @Model.Style.LinkFontColor">@Model.Name</a>
    </div>
</div>