@model SocialModal

@{
    Layout = "_LayoutEmpty";
}
<form hx-post="@Url.RouteUrl("SocialLink")" hx-target="#sociallist" hx-swap="beforeend">
<div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
        <div class="modal-header-social">
            <span>@Html.Raw(Model.Icon)</span>
        </div>
        <div class="modal-body">
            <span> User Name: </span>
            <input name="username" type="text"/>
            <input hidden="hidden" name="Icon" type="hidden" value="@Model.Icon"/>
            <input hidden="hidden" name="Name" type="hidden" value="@Model.Name"/>
        </div>
        <div class="modal-footer-social">
            <button type="button" class="btn btn-warning" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-secondary" data-bs-dismiss="modal">Save</button>
        </div>
    </div>
</div>
</form>