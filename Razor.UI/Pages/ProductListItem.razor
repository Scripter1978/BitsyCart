<a class="btn" href="https://google.com" alt="@Uid">
    <div class="card">
        <div class="card-header" style="background-image: url(@PreviewImage);">
            <div style="right: 0; bottom: 0;position: absolute; margin: 3px; font-weight: bolder; font-size: larger;">$14.99</div>
        </div>
        <div class="card-body">
            <div class="card-title">
                @Title
            </div>
            <div class="card-sub-title">
                @SubTitle
            </div>
            <div class="card-desc">
                @Description
            </div>
        </div>
    </div>
</a>

@code {

    [Parameter] public string? Uid { get; set; } = "TESTING";
    [Parameter]public string? Title { get; set; } = "TESTING";
    [Parameter]public string? SubTitle { get; set; } = "TESTING";
    [Parameter]public string? Description { get; set; }  = "TESTING";
    [Parameter]public string? PreviewImage { get; set; }  = "TESTING";

}